<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.dogalgazödemesicontroller">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <Button layoutX="8.0" layoutY="10.0" onAction="#getodemeler" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="←" />
    <Label layoutX="39.0" layoutY="21.0" text="Geri" textFill="#efe8e8" underline="true" />

    <VBox alignment="CENTER" layoutY="40" prefWidth="360" spacing="10">
        <Label style="-fx-font-weight: bold;" text="Doğalgaz Faturası" textFill="#0077cc">
            <font><Font size="20" /></font>
        </Label>
        <Label text="İGDAŞ / BOTAŞ" textFill="#aaaaaa" />
    </VBox>

    <VBox layoutX="30.0" layoutY="120.0" prefWidth="300.0" spacing="20" style="-fx-background-color: #182332; -fx-background-radius: 20; -fx-padding: 20;">

        <Label text="Abone Numarası:" textFill="WHITE" />
        <TextField fx:id="txtAboneNo" promptText="Örn: 10002000" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Label text="Ödeme Yapılacak Hesap:" textFill="WHITE" />
        <ComboBox fx:id="cmbHesaplar" prefWidth="260.0" promptText="Hesap Seçiniz..." style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Label text="Fatura Tutarı (TL):" textFill="WHITE" />
        <TextField fx:id="txtTutar" promptText="0.00" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Button onAction="#odemeYap" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #0077cc; -fx-cursor: hand; -fx-background-radius: 20; -fx-font-weight: bold;" text="FATURAYI ÖDE" textFill="WHITE" />
    </VBox>

    <Label alignment="CENTER" layoutX="30.0" layoutY="500.0" prefWidth="300.0" text="İşlem ücreti alınmamaktadır." textAlignment="CENTER" textFill="#666666" />

</AnchorPane>