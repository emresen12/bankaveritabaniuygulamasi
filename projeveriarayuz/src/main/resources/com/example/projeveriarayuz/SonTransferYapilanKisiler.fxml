<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.SonTransferlerController">

    <Button layoutX="10.0" layoutY="10.0" onAction="#geriDon" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="←" />
    <Label layoutX="40.0" layoutY="21.0" text="Geri" textFill="#efe8e8" underline="true" />

    <VBox layoutX="10.0" layoutY="60.0" prefHeight="550.0" prefWidth="340.0" spacing="10">
        <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Son İşlemleriniz" textFill="#0077cc" />

        <TableView fx:id="tableIslemler" prefHeight="500.0" prefWidth="340.0" style="-fx-background-color: #182332;">
            <columns>
                <TableColumn fx:id="colTarih" prefWidth="90.0" text="Tarih" />
                <TableColumn fx:id="colTur" prefWidth="110.0" text="İşlem" />
                <TableColumn fx:id="colHedef" prefWidth="70.0" text="Alıcı" />
                <TableColumn fx:id="colTutar" prefWidth="60.0" text="Tutar" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>