<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.MüsteriParaTransferi">

    <!-- Üst Navigasyon -->
    <Button fx:id="geriButton" layoutX="8.0" layoutY="10.0" onAction="#getmusterianaekran" style="-fx-background-color: transparent; -fx-text-fill: #FFFF; -fx-font-size: 18; -fx-cursor: hand; -fx-padding: 5 10;" text="←">
        <effect>
            <DropShadow color="#00000040" radius="2" spread="0.1" />
        </effect>
    </Button>

    <Label layoutX="45.0" layoutY="16.0" style="-fx-font-weight: 500; -fx-cursor: hand;" text="Geri" textFill="WHITE">
        <font><Font size="13" /></font>
    </Label>

    <!-- Profil ve Başlık Bölümü -->
    <VBox alignment="CENTER" layoutY="50" prefWidth="360" spacing="12">
        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@profilresmi.png" />
            </image>
            <effect>
                <DropShadow color="#00000060" radius="10" spread="0.3" />
            </effect>
        </ImageView>
        <Label style="-fx-font-weight: 600;" text="Para Transferi" textFill="#FFFFFF">
            <font><Font size="22" /></font>
        </Label>
    </VBox>

    <Line endX="330.0" endY="180.0" startX="30.0" startY="180.0" stroke="#1E2F42" strokeWidth="1.5" />

    <!-- Transfer Seçenekleri -->
    <VBox alignment="CENTER" layoutX="30.0" layoutY="200.0" prefWidth="300.0" spacing="15" />

    <!-- Alt Bilgilendirme -->
    <VBox alignment="CENTER" layoutX="30.0" layoutY="450.0" prefWidth="300" spacing="8" style="-fx-padding: 20;">
        <Label style="-fx-font-weight: 600;" textFill="#6BA3D1">
            <font><Font size="14" /></font>
        </Label>
        <Label style="-fx-font-size: 11;" textAlignment="CENTER" textFill="#8DA3B8" wrapText="true" />
    </VBox>

     <Button layoutX="40.0" layoutY="394.0" onAction="#goToSonTransferler" prefHeight="55" prefWidth="280.0" style="-fx-background-color: #1A2634; -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-font-weight: 500; -fx-cursor: hand; -fx-font-size: 13; -fx-border-color: #2A3D52; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-alignment: CENTER;" text="SON TRANSFER YAPILAN KİŞİLER">
         <effect>
             <DropShadow color="#00000030" offsetY="2" radius="5" spread="0.2" />
         </effect>
     </Button>

     <Button layoutX="40.0" layoutY="320.0" onAction="#goToIbanTransfer" prefHeight="55" prefWidth="280.0" style="-fx-background-color: #1A2634; -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-font-weight: 500; -fx-cursor: hand; -fx-font-size: 13; -fx-border-color: #2A3D52; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-alignment: CENTER;" text="İBANA TRANSFER">
         <effect>
             <DropShadow color="#00000030" offsetY="2" radius="5" spread="0.2" />
         </effect>
     </Button>

     <Button layoutX="40.0" layoutY="239.0" onAction="#goToKayitliKisi" prefHeight="55" prefWidth="280.0" style="-fx-background-color: #1A2634; -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-font-weight: 500; -fx-cursor: hand; -fx-font-size: 13; -fx-border-color: #2A3D52; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-alignment: CENTER;" text="KAYITLI KİŞİYE TRANSFER">
         <effect>
             <DropShadow color="#00000030" offsetY="2" radius="5" spread="0.2" />
         </effect>
     </Button>
     <Label layoutX="114.0" layoutY="200.0" text="Transfer işleminizi seçiniz" textFill="#8DA3B8">
         <font>
         <Font size="12" />
      </font>
     </Label>

</AnchorPane>
