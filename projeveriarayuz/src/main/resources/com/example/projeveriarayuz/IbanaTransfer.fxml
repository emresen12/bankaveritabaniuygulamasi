<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.IbanaTransferController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <Button layoutX="10.0" layoutY="10.0" onAction="#geriDon" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="←" />
    <Label layoutX="40.0" layoutY="21.0" text="Geri" textFill="#efe8e8" underline="true" />

    <VBox layoutX="30.0" layoutY="100.0" spacing="20" style="-fx-background-color: #182332; -fx-padding: 20; -fx-background-radius: 15;">
        <Label text="Gönderen Hesap:" textFill="WHITE" />
        <ComboBox fx:id="cmbKaynakHesap" prefWidth="260.0" promptText="Hesap Seçin" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Label text="Alıcı IBAN / Hesap No:" textFill="WHITE" />
        <TextField fx:id="txtHedefIban" promptText="TR..." style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Label text="Tutar (TL):" textFill="WHITE" />
        <TextField fx:id="txtTutar" promptText="0.00" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Button onAction="#transferYap" prefWidth="260.0" style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-font-weight: bold;" text="GÖNDER" />
    </VBox>
</AnchorPane>