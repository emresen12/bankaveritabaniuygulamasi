<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.suödemesicontroller">

    <Button layoutX="10.0" layoutY="10.0" onAction="#getodemeler" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="←" />
    <Label layoutX="40.0" layoutY="21.0" text="Ödemelere Dön" textFill="#efe8e8" underline="true" />

    <VBox alignment="CENTER" layoutY="50.0" prefWidth="360.0" spacing="10">
        <Label text="SU FATURASI ÖDEME" textFill="#0077cc">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>
        <Label text="İSKİ / ASKİ / BUSKİ" textFill="#aaaaaa" />
    </VBox>

    <VBox layoutX="30.0" layoutY="150.0" prefWidth="300.0" spacing="20" style="-fx-background-color: #182332; -fx-background-radius: 15; -fx-padding: 20;">

        <Label text="Abone Numarası:" textFill="WHITE" />
        <TextField fx:id="txtAboneNo" promptText="Örn: 12345678" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Label text="Ödeme Yapılacak Hesap:" textFill="WHITE" />
        <ComboBox fx:id="cmbHesaplar" prefWidth="260.0" promptText="Hesap Seçiniz..." style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Label text="Fatura Tutarı (TL):" textFill="WHITE" />
        <TextField fx:id="txtTutar" promptText="0.00" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

        <Button onAction="#odemeYap" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #0077cc; -fx-cursor: hand;" text="ÖDEMEYİ TAMAMLA" textFill="WHITE">
            <font><Font name="System Bold" size="14.0" /></font>
        </Button>
    </VBox>

    <Label alignment="CENTER" layoutX="30.0" layoutY="500.0" prefWidth="300.0" text="Ödeme tutarı seçilen hesabınızdan &#10;anında tahsil edilecektir." textAlignment="CENTER" textFill="#666666" wrapText="true" />

</AnchorPane>