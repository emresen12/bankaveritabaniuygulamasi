<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.MusteriUrunlerController">

    <Button layoutX="8.0" layoutY="10.0" onAction="#getmusterianaekran" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="←" />
    <Label layoutX="39.0" layoutY="21.0" text="Geri" textFill="#efe8e8" underline="true" />

    <VBox alignment="CENTER" layoutY="40" prefWidth="360" spacing="15">
        <Label style="-fx-font-weight: bold;" text="Ürün İşlemleri" textFill="#0077cc">
            <font><Font size="20" /></font>
        </Label>
    </VBox>

    <VBox fx:id="yeniBasvuruKutusu" layoutX="30.0" layoutY="85.0" prefHeight="173.0" prefWidth="300" spacing="10"
          style="-fx-background-color: #182332; -fx-background-radius: 20; -fx-padding: 20;">

        <Label text="Yeni Ürün Satın Al / Başvur" style="-fx-font-weight: bold;" textFill="white">
            <font><Font size="16" /></font>
        </Label>

        <ComboBox fx:id="urunBasvuruComboBox" prefWidth="280" promptText="Başvuru Yapılacak Ürünü Seçin" />

        <Button onAction="#basvuruYapmaIslemi" prefHeight="30.0" prefWidth="280"
                style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                text="BAŞVURU YAP / SATIN AL" />
    </VBox>

    <VBox layoutX="30.0" layoutY="280.0" prefWidth="300" spacing="10">
        <Label text="Sahip Olduğum Ürünler" style="-fx-font-weight: bold;" textFill="white">
            <font><Font size="14" /></font>
        </Label>

        <TableView fx:id="sahipOlunanUrunlerTable" prefHeight="330.0" prefWidth="300.0" style="-fx-background-color: #182332;">
            <columns>
                <TableColumn fx:id="hesapNoColumn" prefWidth="120.0" text="Hesap Numarası" />
                <TableColumn fx:id="urunTipiColumn" prefWidth="80.0" text="Ürün Tipi" />
                <TableColumn fx:id="baslangicTarihiColumn" prefWidth="100.0" text="Başlangıç Tarihi" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>