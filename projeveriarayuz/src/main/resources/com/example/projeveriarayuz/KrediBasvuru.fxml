<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.KrediBasvuruController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <!-- Üst Navigasyon -->
    <Button layoutX="8.0" layoutY="10.0" onAction="#getUrunlerAnaEkran" style="-fx-background-color: transparent; -fx-text-fill: #FFFF; -fx-font-size: 18; -fx-cursor: hand; -fx-padding: 5 10;" text="←" textFill="WHITE">
        <effect>
            <DropShadow color="#00000040" radius="2" spread="0.1" />
        </effect>
    </Button>

    <Label layoutX="45.0" layoutY="18.0" prefHeight="20.0" prefWidth="24.0" style="-fx-font-weight: 500; -fx-cursor: hand;" text="Geri" textFill="WHITE">
        <font><Font size="13" /></font>
    </Label>

    <!-- Başlık Bölümü -->
    <VBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="50" prefWidth="300" spacing="8">
        <Label style="-fx-font-weight: 600;" text="Kredi İşlemleri" textFill="#FFFFFF">
            <font><Font size="22" /></font>
        </Label>
        <Label text="Yeni kredi başvurusu yapın veya kredilerinizi görüntüleyin" textFill="#8DA3B8">
            <font><Font size="12" /></font>
        </Label>
    </VBox>

    <Line endX="330.0" endY="115.0" startX="30.0" startY="115.0" stroke="#1E2F42" strokeWidth="1.5" />

    <!-- Kredi Başvuru Formu -->
    <VBox layoutX="30.0" layoutY="135.0" prefHeight="256.0" prefWidth="300" spacing="15" style="-fx-background-color: #1A2634; -fx-background-radius: 6; -fx-padding: 20; -fx-border-color: #2A3D52; -fx-border-radius: 6; -fx-border-width: 1.5;">

        <Label style="-fx-font-weight: 500;" text="Yeni Kredi Başvurusu" textFill="#FFFFFF">
            <font><Font size="14" /></font>
        </Label>

        <VBox spacing="8">
            <Label style="-fx-font-weight: 500;" text="Kredi Türü" textFill="#B8C5D6">
                <font><Font size="12" /></font>
            </Label>
            <ComboBox fx:id="cmbKrediTuru" prefWidth="260" promptText="Kredi türü seçiniz" style="-fx-background-color: #0F1721; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-color: #2A3D52; -fx-border-radius: 6; -fx-border-width: 1.5; -fx-font-size: 13;" />
        </VBox>

        <VBox spacing="8">
            <Label style="-fx-font-weight: 500;" text="Kredi Bilgileri" textFill="#B8C5D6">
                <font><Font size="12" /></font>
            </Label>
            <Label fx:id="lblAciklama" prefHeight="43.0" prefWidth="257.0" style="-fx-font-size: 12;" text="Kredi türü seçtiğinizde bilgiler burada görüntülenecektir." textFill="#8DA3B8" wrapText="true" />
        </VBox>

        <Button onAction="#basvuruYap" prefHeight="42.0" prefWidth="260.0" style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: 600; -fx-cursor: hand; -fx-font-size: 13;" text="BAŞVURU YAP">
            <effect>
                <DropShadow color="#0077cc40" radius="8" spread="0.2" />
            </effect>
        </Button>
    </VBox>

    <!-- Aktif Krediler Bölümü -->
    <VBox layoutX="30.0" layoutY="395.0" prefWidth="300" spacing="12">
        <Label style="-fx-font-weight: 500;" text="Aktif Kredileriniz" textFill="#FFFFFF">
            <font><Font size="14" /></font>
        </Label>

        <ScrollPane fitToWidth="true" prefHeight="210.0" prefWidth="300.0" style="-fx-background: #0F1721; -fx-background-color: transparent; -fx-border-color: transparent;">
            <content>
                <VBox fx:id="krediListesiContainer" alignment="TOP_CENTER" spacing="12" style="-fx-background-color: transparent; -fx-padding: 5;">
                </VBox>
            </content>
        </ScrollPane>
    </VBox>

</AnchorPane>
