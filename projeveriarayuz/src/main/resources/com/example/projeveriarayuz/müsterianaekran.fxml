   <Button fx:id="odemeButton" alignment="BOTTOM_LEFT" layoutX="14.0" layoutY="333.0" onAction="#getOdemeİslemleri" prefHeight="90.0" prefWidth="105.0" style="-fx-background-color: #0b192f; -fx-text-fill: #0077cc; -fx-background-radius: 20;" text="Ödeme İşlemleri" />

   <Button fx:id="sigortaButton" alignment="BOTTOM_CENTER" layoutX="239.0" layoutY="333.0" onAction="#getsigortalarim" prefHeight="90.0" prefWidth="105.0" style="-fx-background-color: #0b192f; -fx-text-fill: #0077cc; -fx-background-radius: 20;" text="Sigortalarım" />

   <Button fx:id="urunButton" alignment="BOTTOM_CENTER" layoutX="127.0" layoutY="439.0" onAction="#getMüsteriÜrünler" prefHeight="90.0" prefWidth="105.0" style="-fx-background-color: #0b192f; -fx-text-fill: #0077cc; -fx-background-radius: 20;" text="Ürünler" />

   <Button fx:id="transferButton" alignment="BOTTOM_CENTER" layoutX="127.0" layoutY="333.0" onAction="#getmusteriparayatırma" prefHeight="90.0" prefWidth="105.0" style="-fx-background-color: #0b192f; -fx-text-fill: #0077cc; -fx-background-radius: 20;" text="Para Transferi" />

   <Button fx:id="hesapButton" alignment="BOTTOM_CENTER" layoutX="14.0" layoutY="439.0" onAction="#getmusteriparacekme" prefHeight="90.0" prefWidth="105.0" style="-fx-background-color: #0b192f; -fx-text-fill: #0077cc; -fx-background-radius: 20;" text="Hesaplarım" />

   <!-- ICONLAR -->
   <ImageView fx:id="imgOdeme" fitHeight="42.0" fitWidth="71.0" layoutX="45.0" layoutY="348.0" pickOnBounds="true" preserveRatio="true">
      <image><Image url="@img_13.png" /></image>
   </ImageView>

   <ImageView fx:id="imgSigorta" fitHeight="42.0" fitWidth="71.0" layoutX="268.0" layoutY="348.0" pickOnBounds="true" preserveRatio="true">
      <image><Image url="@img_3.png" /></image>
   </ImageView>

   <ImageView fx:id="imgHesap" fitHeight="32.0" fitWidth="47.0" layoutX="43.0" layoutY="461.0" pickOnBounds="true" preserveRatio="true">
