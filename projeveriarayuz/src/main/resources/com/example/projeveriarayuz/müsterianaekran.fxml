<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: #0F1721;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeveriarayuz.müsterianaekrancontroller">


   <VBox alignment="CENTER" layoutY="0" prefHeight="300" prefWidth="360" spacing="10" style="-fx-background-color: #0F1721;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

      <ImageView fx:id="profilResmi" fitHeight="80" fitWidth="80">
         <image>
            <Image url="@profilresmi.png" />
         </image>
      </ImageView>

      <Label fx:id="isimLabel" text="YOUR NAME" textFill="#0077cc">
         <font><Font size="18" /></font>
      </Label>

      <Label fx:id="tcLabel" text="your-email@email.com" textFill="#0077cc">
         <font><Font size="12" /></font>
      </Label>

      <!-- Bakiye Kutusu -->
      <VBox alignment="CENTER" maxWidth="240" spacing="5" style="-fx-background-color: #182332; -fx-background-radius: 12; -fx-padding: 10;">

         <Label text="BAKİYE" textFill="#0077cc">
            <font><Font size="12" /></font>
         </Label>

         <Label fx:id="bakiyeLabel" text="4,180.20$" textFill="WHITE">
            <font><Font size="22" /></font>
         </Label>

      </VBox>
